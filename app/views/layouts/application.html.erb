<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Sisällysluettelo</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Antti Matikainen", root_path, class: 'navbar-brand' %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="active">
          <%= link_to root_path do %>
              <i class="fa fa-home"><%= t('home') %></i>
          <% end %>
        </li>
        <li>
          <%= link_to guestbooks_path, 'data-no-turbolink' => true  do %>
              <i class="fa fa-book"><%= t('guestbook') %></i>
          <% end %>
        </li>
        <li>
          <% if current_user %>
              Logged in as <%= current_user.email %>
              <%=  link_to "Log out", log_out_path %>
          <% else %>
              <%= link_to "Sign up", sign_up_path %>
        <% end %>
        </li>
        <li>
          <%= link_to "log in", log_in_path %>
        </li>
      </ul>
    </div>
    <!-- /.nav-collapse -->
  </div>
  <!-- /.container -->
</div>
<!-- /.navbar -->
<div class="container">
  <div class="row row-offcanvas row-offcanvas-right">
    <div id="content" class="col-xs-12 col-sm-9">
      <p class="pull-right visible-xs">
        <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Sisällysluettelo</button>
      </p>
      <%= yield %>
    </div>
    <!--/span-->

    <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
      <div class="list-group">
        <%= link_to root_path, class: 'list-group-item' do %>
            <i class="fa fa-home"><%= t('home') %></i>
        <% end %>
        <%= link_to links_path, class: 'list-group-item' do %>
            <i class="fa fa-tags"><%= t('links') %></i>
        <% end %>

      </div>
    </div>
    <!--/span-->
  </div>
  <!--/row-->

  <hr>

  <footer>
    <h6>
      <p>© 2014 Antti Matikainen </p>
    </h6>
  </footer>
</div>
<!--/.container-->

<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
</body>
</html>

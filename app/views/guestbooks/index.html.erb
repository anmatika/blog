<h1><%= t('guestbook') %></h1>

<table id="#guestbookMessages">
  <thead>
    <tr>
      <th><%= t('message') %></th>
      <th><%= t('name') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @guestbooks.each do |guestbook| %>
      <tr>
        <td><%= guestbook.message %></td>
        <td><%= guestbook.name %></td>
        <td><%= link_to 'Show', guestbook, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_guestbook_path(guestbook), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', guestbook, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Guestbook message' , new_guestbook_path,  class: 'btn btn-info' %>
<%= javascript_include_tag params[:controller] %>